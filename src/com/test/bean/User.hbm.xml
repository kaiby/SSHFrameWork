<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="ccas" package="com.test.bean">
	<class name="User" >
		<id column="id" name="id" type="java.lang.String">
			<generator class="uuid"></generator>
		</id>
		<property name="userName" column="USER_NAME" type="java.lang.String"></property>
		<property name="loginName" column="LOGIN_NAME" type="java.lang.String"></property>
		<property name="passWord" column="PASS_WORD" type="java.lang.String"></property>
		<property name="age" column="AGE" type="java.lang.Integer"></property>
	</class>
</hibernate-mapping>